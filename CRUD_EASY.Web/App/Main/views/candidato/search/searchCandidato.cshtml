<div ng-controller="app.views.searchCandidato as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <div class="card">


            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">Buscar Candidatos</header>
                        <div class="panel-body">
                            <form role="form" class="form">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <input type="text" class="form-control" ng-model="vm.term" placeholder="Digite Nome, Email, ou Telefone" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group pull-right">
                                        <button class="btn bg-success" ng-click="vm.searchAdvanced()" title="Busca Avançada">
                                            <span class="fa fa-search"></span>
                                        </button>
                                        <button class="btn bg-success" ng-click="vm.go()">
                                            <span class="fa fa-user-plus"></span>&nbsp; Criar Novo
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>

            <div class="table-responsive constrained">
                <table class="table responsive" data-sortable>
                    <thead>
                        <tr>

                            <th style="width: 15%">Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Cidade</th>
                            <th>Conhecimentos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="candidato in vm.candidatos" ng-click="vm.select(candidato)">

                            <td style="width: 15%">{{candidato.nome}}</td>
                            <td>{{candidato.email}}</td>
                            <td>{{candidato.telefone}}</td>
                            <td>{{candidato.cidade + candidato.estado}}</td>
                            <td>{{candidato.conhecimentos}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

